.items
  display grid
  grid-template-columns repeat(2, 160px)
  margin 0 20px 12px 40px !important
  position relative
  align-items center
  justify-content center

  @media(max-width: 830px)
    display flex
    flex-wrap wrap
    justify-content space-around
    margin 40px !important

  .item-container:nth-child(even)
    grid-column-start 2

    .item
      position absolute
      z-index 1

      @media(max-width: 830px)
        position relative

  .item
    align-items center
    border-radius 50%
    box-shadow 0 12px 30px 0 rgba(23,28,33,.06)
    cursor pointer
    display flex
    height 120px
    justify-content center
    margin-bottom 12px
    overflow hidden
    padding 24px
    text-align center
    transition box-shadow 0.2s linear
    width 120px

    &:hover
      box-shadow 0 12px 30px 0 rgba(23, 28, 33, .11)

    @media(max-width: 830px)
      height 70px
      width 70px
      box-shadow none

      img.item-logo
        width 110%

        &.frc
          width 70%
        &.bgc
          width 120%
        &.ucla
          width 85%

    img
      width 90%

      &.frc
        width 57%
      &.bgc
        width 110%
      &.ucla
        width 75%

    &.selected-item.zoom-in
      animation zoom-in 0.4s ease-out
      align-items center
      display flex
      grid-column-end 3
      grid-column-start 1
      justify-content center
      justify-self stretch
      left 80px
      position absolute
      transform scale(2)
      z-index 2

      &:hover
        box-shadow 0 12px 30px 0 rgba(23,28,33,.06)
        cursor default

      @media(max-width: 830px)
        left 0
        top 0

        &:hover
          box-shadow none

        img
          max-height 40px
          max-width 72px
          width auto

      @keyframes zoom-in {
        0% {
          transform: scale(1)
        }
        100% {
          transform: scale(2)
        }
      }

    &.zoom-out
      animation zoom-out 0.4s ease-out
      transform scale(0)
      z-index 1

      @keyframes zoom-out {
        0% {
          transform: scale(1)
        }
        100% {
          transform: scale(0)
        }
      }

    &.zoom-back-out
      animation zoom-back-out 0.4s ease-out
      transform scale(1)

      @keyframes zoom-back-out {
        0% {
          transform: scale(2)
        }
        100% {
          transform: scale(1)
        }
      }

    &.zoom-back-in
      animation zoom-back-in 0.4s ease-out
      transform scale(1)

      @keyframes zoom-back-in {
        0% {
          transform: scale(0)
        }
        100% {
          transform: scale(1)
        }
      }

  .close
    cursor pointer
    height 20px
    position absolute
    right 40px
    top 40px
    width 20px

    @media(max-width: 830px)
      right 0

    svg
      transition stroke 0.2s linear

      &:hover
        stroke #b8bcc2
